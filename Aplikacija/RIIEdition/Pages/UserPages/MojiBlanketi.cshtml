@page
@model RIIEdition.Pages.UserPages.MojiBlanketiModel
@{
}
@section css
{
<link rel="stylesheet" href="~/css/mojiblanketi.css" />

}
@section Scripts
{

}

<body>
    <partial name="_HeaderPartial" />
    <div class="container">
        <main role="main">
            <h2>Moji blanketi:</h2>
            <form method="post">
                <div class="row justify-content-start">

                    @foreach (var item in Model.MaterijalData)
                    {

                    <div class="col-sm-8 col-md-7 col-lg-4 col-xl-4">
                        <div class="d-flex flex-column">
                            <div class="box">
                                <div class="image"><img src="/AppPictures/skripta.jpg" /></div>

                                <div class="text">
                                    <div class="d-flex flex-column">
                                        <div>Naziv:</div>
                                        <div> @item.NazivMaterijala</div>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <div>Predmet:</div>
                                        <div> @item.PredmetMaterijala</div>
                                    </div>
                                    <button class="textbtn btn btn-primary" type="submit" asp-page-handler="prikazi"
                                        asp-route-id="@item.Id">Prikazi</button>
                                    <button class="textbtn1 btn btn-danger" type="submit" asp-page-handler="izbrisi"
                                        asp-route-id="@item.Id">Izbrisi</button>
                                </div>

                            </div>
                        </div>
                    </div>

                    }

                </div>
            </form>
            @if(Model.SelectedData==null){
            <h3 class="mt-5">Nije izabran nijedan blanket</h3>
            }
            else{

            <div class="blanket">
                <div class="font-weight-bold">Naziv blanketa:@Model.SelectedData.NazivMaterijala</div>
                <div class="mb-3 font-weight-bold">Predmet blanketa:@Model.SelectedData.PredmetMaterijala</div>
                @if(Model.Pitanja.Count!=0 || Model.Odgovori.Count!=0)
                {
                @for (int i = 0; i < Model.Pitanja.Count-1; i++) { <div>P@(i+1):@Model.Pitanja[i]
            </div>
            <div class="mb-4">O@(i+1):@Model.Odgovori[i]</div>
            }
            }
            else{
            <div>Pitanja u blanketu su prazna :-|</div>
            }
    </div>
    }

    </main>
    </div>
    <partial name="_ScriptsPartial" />

</body>