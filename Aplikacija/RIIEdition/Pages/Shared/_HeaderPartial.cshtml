 <header>
     <div class="loader" ></div>
     <nav class="navbar navbar-expand-sm navbar-dark bg-dark h-100">
         <a class="navbar-brand ml-2 mr-4 " asp-page="/Index">RII</a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavbarSupportedContent">
             <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse row " id="mainNavbarSupportedContent">
             <ul class="navbar-nav">
                 <li class="nav-item"><a class="nav-link ml-3" asp-page="/Index">Pocetna</a></li>
                 <li class="nav-item"><a class="nav-link ml-3" asp-page="/UserPages/Kvizovi">Kvizovi</a></li>
                 <li class="nav-item"><a class="nav-link ml-3" asp-page="/UserPages/Calendar">Kalendar</a></li>
                 <li class="nav-item"><a class="nav-link ml-3" asp-page="/UserPages/Relaksacija">Relaksacija</a></li>
                 <li class="nav-item dropdown">
                     <a class="nav-link ml-3" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                         aria-haspopup="true" aria-expanded="false">
                         Materijali</a>
                     <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                         <a class="dropdown-item" asp-page="/UserPages/Materijali">O materijalima</a>
                         <a class="dropdown-item" asp-page="/UserPages/OMaterijalima">Prednosti nasih materijala</a>
                         @if(signInManager.IsSignedIn(User))
                         {
                         <a class="dropdown-item" asp-page="/UserPages/BlanketNapravi">Napravi blanket</a>
                         <a class="dropdown-item" asp-page="/UserPages/MojiBlanketi">Moji blanketi</a>
                         }
                         <a class="dropdown-item" asp-page="/UserPages/BazaBlanketa">Baza blanketa</a>
                     </div>
                 </li>
                 @if(signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                 {
                 <li class="nav-item dropdown">

                     <a class="nav-link dropdown-toggle ml-3" href="#" role="button" data-toggle="dropdown"
                         id="navbarDropdownMenuLink">
                         Admin
                     </a>
                     <div class="dropdown-menu">
                         <a class="dropdown-item" asp-page="/AdminPages/ListRoles">Izlistaj Uloge</a>
                         <a class="dropdown-item" asp-page="/AdminPages/CreateRole">Napravi Ulogu</a>
                         <a class="dropdown-item" asp-page="/AdminPages/ListUsers">Svi korisnici u aplikaciji</a>

                     </div>
                 </li>
                 }

             </ul>
             <ul class="login-register-dropdown-container navbar-nav ml-auto">
                 @if(signInManager.IsSignedIn(User))
                 {
                 <button type="button" class="btn btn-secondary" style="cursor: not-allowed; pointer-events: none;"
                     aria-haspopup="true" aria-expanded="false">
                     <ul class="navbar-nav">
                         <div class="nav-item">
                             <!--
                                            <img id="navBarPicture" src="/AppPictures/no_image.gif" style="width: 35px; height: 37px" class="card-img-top rounded-circle" />
                                            -->
                         </div>
                         <div class="nav-item">
                             <div class="ml-2 mt-1"> @User.Identity.Name </div>
                         </div>
                     </ul>

                 </button>

                 <div class="btn-group ml-auto mr-2">
                     <button type="button" class="btn btn-secondary dropdown-toggle btn-block" data-toggle="dropdown"
                         aria-haspopup="true" aria-expanded="false">

                     </button>
                     <div class="dropdown-menu dropdown-menu-right">
                         <a asp-page="/userPages/ProfilPage" style="text-decoration: none">
                             <button class="dropdown-item ml-2" type="button">Profile</button>
                         </a>
                         <a style="text-decoration: none">
                             <button class="dropdown-item ml-2" type="button" data-toggle="modal"
                                 data-target="#save-changes-modal3">Setings</button>
                         </a>

                         <form class="dropdown-item border-top" method="post">
                             <button class="nav-link btn btn-link text-dark" asp-page="/UserPages/Logout">
                                 Logout
                             </button>
                         </form>
                     </div>
                 </div>
                 }
                 else
                 {
                 <li class="nav-item"><a class="nav-link text-white" asp-page="/UserPages/Login">Login</a></li>
                 <li class="nav-item"><a class="nav-link text-white mr-4  " asp-page="/UserPages/Register">
                         Register
                     </a>
                 </li>
                 }

             </ul>

         </div>
     </nav>

     <!-- Modal -->
     <div class="modal fade" id="save-changes-modal3" tabindex="-1" role="dialog"
         aria-labelledby="save-changes-modalLabel3" aria-hidden="true">
         <div class="modal-dialog" role="document">
             <div class="modal-content">
                 <div class="modal-header">
                     <h5 class="modal-title" id="save-changes-modalLabel3">Brisanje lokalnih podataka</h5>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                         <span aria-hidden="true">&times;</span>
                     </button>
                 </div>
                 <div class="modal-body" id="save-changes-modal-body3">
                     Å½elite li zaista obrisati lokalne podatke ove masine?
                 </div>
                 <div class="modal-footer">
                     <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                     <button type="button" class="btn btn-primary" data-dismiss="modal"
                         onclick="javascript:obrisi()">Save changes</button>
                 </div>
             </div>
         </div>
     </div>

     <script>
         function obrisi() {
             localStorage.clear();
         }
     </script>
     <script>
            document.addEventListener('DOMContentLoaded', function() {
                jQuery(function($) {
                    $('.loader').fadeOut('slow');
                });
            });
        </script>
        <style>
            .loader {
                position: fixed;
                left: 0px;
                top: 0px;
                width: 100%;
                height: 100%;
                z-index: 9999;
                background: url('https://elementorcodes.b-cdn.net/wp-content/uploads/images/loader.svg') 50% 50% no-repeat #ffffff;
                /* Change the #fff here to your background color of choice for the preloader fullscreen section */
            }

            .elementor-editor-active .loader {
                display: none;
            }
        </style>

 </header>