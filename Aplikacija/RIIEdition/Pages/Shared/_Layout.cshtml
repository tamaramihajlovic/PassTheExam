@inject SignInManager<User> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RIIEdition</title>
    
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary h-100">
            <a class="navbar-brand ml-5 mr-5 " asp-page="/Index">RIIEdition</a>
             <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
    <span class="navbar-toggler-icon"></span>
  </button>
                <div class="collapse navbar-collapse row " id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link text-white" asp-page="/Index">Naslovna strana</a></li>
                        
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if(signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post">
                                    <button class="nav-link btn btn-link text-white">@User.Identity.Name</button>
                                </form>
                            </li>
                                <li class="nav-item">
                                     
                                    <form method="post">
                                        <button class="nav-link btn btn-link text-white mr-4" asp-page="/UserPages/Logout">
                                            Odjavi se 
                                        </button>
                                    </form>
                                </li>
                        }
                        else 
                        {
                             <li class="nav-item"><a class="nav-link text-white" asp-page="/UserPages/Login">Prijavi se</a></li>
                         <li class="nav-item"><a class="nav-link text-white mr-4  " asp-page="/UserPages/Register">
                         Registrovanje
                         </a>
                         </li>
                        }
                       
                    </ul>

                </div>
        </nav>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            
            @RenderBody()
        </main>
    </div>

   
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
  
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
